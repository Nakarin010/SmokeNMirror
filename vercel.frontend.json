{
  "version": 2,
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "name": "smokenmiror-frontend",
  "buildCommand": null,
  "outputDirectory": ".",
  "cleanUrls": true,
  
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://ciom4h2th5.execute-api.us-east-1.amazonaws.com/prod"
    }
  ],
  
  "headers": [
    {
      "source": "/styles.css",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
