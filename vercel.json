{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "functions": {
    "app.py": {
      "memory": 256,
      "maxDuration": 60
    }
  },
  "routes": [
    {
      "src": "/styles.css",
      "dest": "app.py",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/api/tickers/search",
      "dest": "app.py",
      "headers": {
        "Cache-Control": "public, s-maxage=300, stale-while-revalidate=600"
      }
    },
    {
      "src": "/api/quick/(.*)",
      "dest": "app.py",
      "headers": {
        "Cache-Control": "public, s-maxage=60, stale-while-revalidate=120"
      }
    },
    {
      "src": "/api/chart/(.*)",
      "dest": "app.py",
      "headers": {
        "Cache-Control": "public, s-maxage=60, stale-while-revalidate=300"
      }
    },
    {
      "src": "/api/correlation",
      "dest": "app.py",
      "headers": {
        "Cache-Control": "public, s-maxage=60, stale-while-revalidate=300"
      }
    },
    {
      "src": "/api/(.*)",
      "dest": "app.py",
      "headers": {
        "Cache-Control": "no-store, must-revalidate"
      }
    },
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "env": {
    "PYTHONUNBUFFERED": "1"
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
